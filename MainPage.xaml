<Page
    x:Class="UWStats.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWStats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True" Loaded="Page_Loaded">

    <Grid>
        <ContentDialog x:Name="ContentDialog1"
               PrimaryButtonText="OK"
               Title="Enter your client ID">

            <Grid>
                <TextBox PlaceholderText="ID" Text="{Binding ElementName=ContentDialog1, Path=Tag, Mode=TwoWay}" />
            </Grid>
        </ContentDialog>
    </Grid>
</Page>
